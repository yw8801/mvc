@model XSManager.Models.DetailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>新規画面</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="Content/bootstrap.min.css">
    <script src="Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm(
        "Index",
        "Detail",
        null,
        FormMethod.Post,
        new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <h2 class="text-primary">詳細画面</h2>
                <button type="button" class="btn btn-link" onclick="location.href='./List'">＜＜＜一覧へ戻る</button>
                <hr />
            </div>
            <div class="form-group">
                <div class="row justify-content-center">
                    <h2 class="text-danger">@ViewData["Message"]</h2>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <input name="Update" class="btn btn-primary btn-lg" type="submit" value="更新" />
                    <input name="Delete" class="btn btn-primary btn-lg" type="submit" value="削除" />
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Id, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.Id, new { @class = "col-md-4", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "col-md-4", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Position, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.Position, new { @class = "col-md-4", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.StartDate, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "col-md-4", @readonly = "readonly" })
                </div>
            </div>
        }
    </div>
    <script language="javascript" type="text/javascript">
        if(@Html.Raw(Json.Encode(ViewData["DeletedFlag"]))){
          document.getElementsByName("Update")[0].disabled = true;
          document.getElementsByName("Delete")[0].disabled = true;
        }
    </script>
</body>
</html>