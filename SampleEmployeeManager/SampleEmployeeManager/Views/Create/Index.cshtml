@model XSManager.Models.CreateViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>新規画面</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="Content/bootstrap.min.css">
    <script src="Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm(
        "Index",
        "Create",
        null,
        FormMethod.Post,
        new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <h2 class="text-primary">新規画面</h2>
                <button type="button" class="btn btn-link" onclick="location.href='./List'">＜＜＜一覧へ戻る</button>
                <hr />
            </div>
            <div class="form-group">
                <div class="row justify-content-center">
                    <h2 class="text-danger">@ViewData["Message"]</h2>
                </div>
            </div>
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Id, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.Id, new { @class = "col-md-4" })
                    @Html.ValidationMessageFor(model => model.Id)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "col-md-4" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Position, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.Position, new { @class = "col-md-4" })
                    @Html.ValidationMessageFor(model => model.Position)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.StartDate, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "col-md-4" })
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <input name="Create" class="btn btn-primary btn-lg col-md-4" type="submit" value="登録" />
                </div>
            </div>
        }
    </div>
    <script language="javascript" type="text/javascript">
        if (@Html.Raw(Json.Encode(ViewData["CreatedFlag"]))) {
          $(':input').attr('readonly','readonly');
          document.getElementsByName("Create")[0].disabled = true;
        }
    </script>
</body>
</html>