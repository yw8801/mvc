@model XSManager.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>登録画面</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="Content/bootstrap.min.css">
    <script src="Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm(
        "Index",
        "Login",
        null,
        FormMethod.Post,
        new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <div class="row justify-content-center">
                    <h2 class="text-danger">@ViewData["Message"]</h2>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-xs-5 col-sm-4 col-md-3 col-lg-2 col-xs-offset-1 col-md-offset-2 col-sm-offset-3 col-lg-offset-4" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "col-xs-5 col-sm-4 col-md-3 col-lg-2", @maxlength = 20, @placeholder = "ユーザー名を入力してください" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(m => m.Password, new { @class = "col-xs-5 col-sm-4 col-md-3 col-lg-2 col-xs-offset-1 col-md-offset-2 col-sm-offset-3 col-lg-offset-4" })
                    @Html.PasswordFor(m => m.Password, new { @class = "col-xs-5 col-sm-4 col-md-3 col-lg-2", @maxlength = 20, @placeholder = "パスワードを入力してください" })
                </div>
            </div>
            <div class="row">
                <input name="login" class="btn btn-primary btn-lg col-xs-6 col-sm-6 col-md-4 col-lg-2 col-xs-offset-3 col-md-offset-3 col-sm-offset-4 col-lg-offset-5" type="submit" value="登録" />
            </div>

        }
    </div>
</body>
</html>